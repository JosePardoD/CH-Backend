<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/navbar'); %>
    <h1><%=title %></h1>
    <table> 
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>  
      </tr>
      <% products.forEach((item)=>{ %>
        <tr>
            <td> <%=item.name%></td>
            <td> <%=item.price%></td>
            <td><img class="product-img" src="<%=item.thumbnail %>"/></td>
        </tr>
    <% }) %>
    </table>

    <%- include('../partials/footer'); %> 
  </body>
</html>


